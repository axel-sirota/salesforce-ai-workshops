server {
    listen 80;
    server_name {{ workshop_domain }};
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl;
    server_name {{ workshop_domain }};

    ssl_certificate /etc/ssl/certs/workshop.crt;
    ssl_certificate_key /etc/ssl/private/workshop.key;

    location /jaeger {
        auth_basic "Workshop Access";
        auth_basic_user_file /etc/nginx/.htpasswd;

        proxy_pass http://127.0.0.1:16686;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # WebSocket support for Jaeger UI
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }

    location / {
        return 301 /jaeger;
    }
}
